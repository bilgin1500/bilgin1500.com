@import "mixins/layout"

.gallery
  position relative
  height 100%
  
  .slides
    position relative
    height 100%
    z-index 1
    
    @media screen and (min-width: tablet)
      height 85%

    figure
      display none
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      margin 0
      &.active
        display block
        
      svg
        width 100px
        height 100px
        position absolute
        top 50%
        left 50%
        margin-top -50px
        margin-left -50px
    
      img
        display block
        width 100%
        height auto
        margin 0 auto
        user-select none
        &.with-shadow
          box-shadow 1px 1px 25px 1px rgba(0,0,0,0.25)
        &.taller
          width auto
          height 100%
        
      figcaption
        background-color #000
        color #fff
        font-size 13px
        text-align center
        position absolute
        bottom 0
        padding 15px
        box-sizing border-box
        border-radius 8px
        pointer-events none
        
  .bullets
    display none
    position relative
    text-align center
    height 15%
    z-index 2
    pointer-events none
    @media screen and (min-width: tablet)
      display block
    
    .inner-wrapper
      absoluteFullWidth()
      top 50%
      margin-top -12px
    
      a
        display inline-block
        box-sizing border-box
        vertical-align middle
        pointer-events auto
        width 12px
        height 12px
        background-color rgba(0,0,0,0.75)
        border-radius 50%
        margin-right 15px
        border 3px solid transparent
        transition background-color 250ms, border 250ms, transform 150ms
        @media screen and (min-width: tablet)
          margin-right 5px
        &:last-child
          margin-right 0
        &:hover
          background-color #000
          transform scale(1.3)
        &.active
          background-color transparent
          border 1px solid #000
          width 24px
          height 24px
          &:hover
            background-color transparent
            transform scale(1)
            
        span
         display none 

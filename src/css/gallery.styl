@import "mixins/layout"
@import "mixins/triangle"

.gallery
  position relative
  height 100%
  
  .slides
    position relative
    height 100%
    z-index 1
    
    @media screen and (min-width: tablet)
      height 85%

    figure
      display none
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      margin 0
      &.active
        display block
        
      .img-wrapper
        height 100%
    
        .img
          margin 0 auto
          user-select none
          &.with-shadow
            box-shadow 1px 1px 25px 1px rgba(0,0,0,0.25)
          &.taller
            width auto
            height 100%
            
        .loader
          width 32px
          height 32px
          position absolute
          top 50%
          left 50%
          margin-top -(@height / 2)
          margin-left -(@width / 2)
        
      figcaption
        background-color #000
        color #fff
        font-size 13px
        text-align center
        position absolute
        bottom 0
        padding 15px
        box-sizing border-box
        border-radius 8px
        pointer-events none
        
  .bullets
    display none
    position relative
    text-align center
    height 15%
    z-index 2
    pointer-events none
    @media screen and (min-width: tablet)
      display block
    
    .inner-wrapper
      absoluteFullWidth()
      top 50%
      margin-top -12px
    
      a
        display inline-block
        position relative
        box-sizing border-box
        vertical-align middle
        pointer-events auto
        width 24px
        height 24px
        transform-origin 50% 50%
        &:before
          position absolute
          display block
          content ''
          top 50%
          left 50%
          width 6px
          height 6px
          margin-top -4px
          margin-left -4px
          background-color rgba(0,0,0,0.75)
          border 1px solid transparent
          border-radius 50%
          transition transform 150ms ease-in-out, background-color 250ms, border 250ms
          transform-origin 50% 50%
        &:hover
          &:before
            background-color #000
            transform scale(1.5)
          span
            display block
        &.active
          &:before
            background-color transparent
            border 1px solid #000
            transform scale(2)
          &:hover
            &:before
              background-color transparent
              transform scale(2)
        
        > span
          display none 
          position absolute
          bottom 100%
          transform translateX(-50%)
          margin-left 12px
          span
            background-color #000
            color #fff
            font-size 12px
            border-radius 6px
            padding 5px 10px
            white-space nowrap
          &:after
            display block
            margin 0 auto
            content ''
            triangle(10px, 5px)

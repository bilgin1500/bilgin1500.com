@import "assets/fonts"
@import "assets/colors"
@import "mixins/layout"

html
body 
  height 100%

body 
  background-color mintGreen
  color rgba(0,0,0,0.8)
  font-family AvenirRegular
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

::selection
  background rgba(0,0,0,0.15)
  
::-moz-selection
  background rgba(0,0,0,0.15)

svg 
  display block
  margin 0

p
  font-family AvenirRegular
  font-size fNormal
  line-height fHuge
  margin 0
  @media screen and (min-width: tablet)
    font-size fBigger
  a
    color rgba(0,0,0,0.8)
    text-decoration underline
    text-decoration-skip ink
    &:hover
      text-decoration none

.no-scroll
  overflow hidden

.button 
  display block
  background-color #fff
  border 1px solid #000
  padding 10px 20px
  text-transform uppercase
  font-size fSmall
  box-shadow 2px 2px 0px 0px rgba(0, 0, 0, 0.75)
  font-family AvenirRegular
  color #000
  text-decoration none
  letter-spacing 0.03em
  line-height 100%
  outline 0
  cursor pointer
  &:hover 
    background-color yellow
  &:active
  &.active 
    background-color yellow
    box-shadow none
    margin-top 2px
    margin-left 2px

#content-wrapper 
  width 75%
  max-width 960px
  height 100%
  margin 0 auto
  position relative

#logo 
  position fixed
  display block
  box-sizing border-box
  top 0
  padding 15px
  margin 20px
  width 100%
  border 1px solid rgba(0,0,0,0.75)
  box-shadow 2px 2px 0 0 rgba(0,0,0,0.75)
  color rgba(0,0,0,1)
  font-size fMini
  text-align center
  text-decoration none
  z-index 101
  @media screen and (min-width: tablet)
    left 0
    width auto

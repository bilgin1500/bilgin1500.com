@import "assets/fonts"
@import "assets/colors"
@import "mixins/layout"

html
  background-color darksalmon
  height 100%

body 
  background-color pageBackground
  color rgba(0,0,0,0.8)
  font-family AvenirRegular
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

::selection
  background rgba(0,0,0,0.15)
  
::-moz-selection
  background rgba(0,0,0,0.15)

svg 
  display block
  margin 0

p
  font-family AvenirRegular
  font-size fNormal
  line-height 1.5em
  margin 0
  @media screen and (min-width: tablet)
    font-size fBigger
  a
    color rgba(0,0,0,0.5)
    text-decoration underline
    position relative
    transition color 100ms
    /*text-shadow -1px -1px 0 pageBackground, 1px -1px 0 pageBackground, -1px 1px 0 pageBackground, 1px 1px 0 pageBackground
    background-image linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 2px, rgba(0,0,0,0.5) 2px, rgba(0,0,0,0.5) 3px, rgba(0, 0, 0, 0) 3px)*/
    &:hover
      color rgba(0,0,0,1)
      text-decoration none
      /*background-image linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 2px, rgba(0,0,0,1) 2px, rgba(0,0,0,1) 3px, rgba(0, 0, 0, 0) 3px)*/

.no-scroll
  overflow hidden

.button 
  display block
  background-color pageBackground
  border 1px solid #000
  padding 10px 20px
  text-transform uppercase
  font-size fSmall
  box-shadow 2px 2px 0px 0px rgba(0, 0, 0, 0.75)
  font-family AvenirRegular
  color #000
  text-decoration none
  letter-spacing 0.03em
  line-height 100%
  outline 0
  cursor pointer
  &:hover 
    background-color yellow
  &:active
  &.active 
    background-color yellow
    box-shadow none
    margin-top 2px
    margin-left 2px

.img-wrapper
  box-sizing border-box
  width 100%
  
  .img
    display block
    width 100%
    height auto
    
  .loader
    display block
    margin 0 auto

#app
  border: 10px solid darksalmon;
  box-sizing border-box

#logo
  position fixed
  box-sizing border-box
  top 45px
  left 20px
  margin 0
  font-size fNormal
  z-index 101
  a
    color rgba(0,0,0,0.75)
    font-size fSmall
    text-align center
    text-decoration none
    display block
    line-height 1em
    padding 5px 10px
    background-color #fff
    transition background-color 150ms,box-shadow 300ms
  @media screen and (min-width: tablet)
    top 60px
    left 40px
    
#content-wrapper
  position relative
  box-sizing border-box
  padding 0 20px
  @media screen and (min-width: tablet)
    padding 0 30px
  @media screen and (min-width: desktop)
    padding 0
    width 60%
    max-width 750px
    margin-left 190px

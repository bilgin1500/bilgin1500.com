@import "assets/fonts"
json('../database/settings.json')

body 
  background-color #fff
  color rgba(0,0,0,0.8)
  font-family AvenirRegular
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

::selection
  background rgba(0,0,0,0.15)
  
::-moz-selection
  background rgba(0,0,0,0.15)

svg 
  display block
  margin 0

p
  font-family AvenirRegular
  font-size fNormal
  line-height 1.5em
  margin 0
  @media screen and (min-width: unit(breakpoints-tablet, 'px'))
    font-size fBigger
  a
    position relative
    color rgba(0,0,0,0.5)
    text-decoration underline
    transition color 100ms
    &:hover
      color rgba(0,0,0,1)
      text-decoration none

#app
  box-sizing border-box
  overflow hidden

.is-loading
  #loader
    pointer-events all

#loader
  position fixed
  height 100%
  width 100%
  left 0
  z-index 105
  box-sizing border-box
  pointer-events none
  background-color #fff
  border-width 0
  border-style solid
  border-color spotColor

#content
  position relative
  box-sizing border-box
  padding 0 30px
  @media screen and (min-width: unit(breakpoints-tablet, 'px'))
    padding 0 100px
  @media screen and (min-width: unit(breakpoints-desktop, 'px'))
    padding 0
    width 50%
    max-width 750px
    margin 0 auto
  .page
    text-align center
    &:first-child
      margin-top 70px
    @media screen and (min-width: unit(breakpoints-tablet, 'px'))
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 100px
    > h2
      font-size fTiny
      text-transform uppercase
      font-weight normal
      letter-spacing 0.1em
      margin 0 0 20px 0 
      background-color spotColor
      display inline-block
      line-height 0
      padding-bottom 10px
      margin 70px auto
      @media screen and (min-width: unit(breakpoints-tablet, 'px'))
        margin 100px auto
    .page-content
      text-align left

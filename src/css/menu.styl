#menu 
  position fixed
  right 40px
  top 30px
  bottom 30px
  width 50px
  z-index 100
  
  #menu-svg
    height 100%
    width 100%

  #button-wrapper 
    position absolute
    display block
    overflow hidden
    left -100px
    right 0
    top 4px
    bottom 4px
    z-index 1

  .button 
    position absolute
    right -100%
    transform scale(0.5)
    transform-origin 100% 50%

#btn-intro 
  top 5%
#btn-projects
  top 20%
#btn-about 
  top 60%
#btn-sketchbook 
  top 80%

#trigger 
  display block
  width 50px
  height 40px
  position absolute
  right -10px
  top 6px
  cursor pointer
  z-index 2
  background-color rgba(0,0,0,.1)

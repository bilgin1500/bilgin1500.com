#menu
  position fixed
  right 0
  top 0
  bottom 0
  width 150px
  background-color #000
  box-shadow 0 0 12px 0px #000
  z-index 101
  
#nav-wrapper
  width 100%
  height 100%

#nav-pages
  a
    display block
    font-size fMini
    color #fff
    text-align right
    padding 7px 0
    text-decoration none
    transition color 300ms
    &:hover
      color rgba(0,0,0,1)
  
#nav-social 
  margin-top 10px
  text-align right
  a
    display inline-block
    margin-left 15px
    &:first-child
      margin-left 0
    img
      width 16px
      height 16px
    span
      display none

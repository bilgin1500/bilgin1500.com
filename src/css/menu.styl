hideButtons()
  position absolute
  right -100%
  transform scale(0.5)

#menu 
  position fixed
  right 40px
  top 30px
  width 50px
  height 50px
  z-index 100
  &.opened
    bottom 30px
    height auto
  
  svg
    height 100%
    width 100%

  #button-wrapper 
    pointer-events none
    position absolute
    display block
    overflow hidden
    left -130px
    right 0
    top 45px
    bottom 25px
    z-index 1

    .button 
      hideButtons()
      pointer-events auto
      transform-origin 100% 50% 

#trigger 
  display block
  width 37px
  height 37px
  position absolute
  right -4px
  top 8px
  z-index 2
  &.close-button svg
    display block
  
  svg
    display none

@import "mixins/layout"
@import "assets/fonts"

border()
  content ''
  display block
  width 10px
  border-top 1px solid darksalmon

#menu
  position fixed
  top 60px
  right 40px
  z-index 101
  @media screen and (min-width: desktop)
    top 120px
    left 0
    right auto
    &:before
      border()
      margin-left 10px
      margin-bottom 10px

.project-window
  #nav-pages
    display none

#nav-pages
  display none
  @media screen and (min-width: tablet)
    display block
  a
    display inline-block
    font-size fMini
    line-height 1em
    color #000
    margin-left 15px
    padding 6px 10px
    text-decoration none
    transition color 300ms
    background-color #fff
    @media screen and (min-width: desktop)
      display block
      margin-left 50px
      padding 10px 0
  
#nav-social 
  position fixed
  bottom 60px
  right 50px
  a
    display inline-block
    margin-left 15px
    &:first-child
      margin-left 0
    svg
      width 16px
      height 16px
      path
        fill #000
    span
      display none

#copyright
  position fixed
  bottom 30px
  right 0
  &:after
    border()
    float right
    margin-right 10px
    margin-top 10px
  p
    margin-right 50px
    font-size fTiny
  

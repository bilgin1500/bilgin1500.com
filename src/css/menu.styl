hideButtons()
  position absolute
  right -100%
  transform scale(0.5)

#menu 
  position fixed
  right 40px
  top 30px
  width 50px
  height 50px
  z-index 100
  &.opened
    bottom 30px
    height auto
  
  svg
    height 100%
    width 100%


@import "assets/fonts"
@import "assets/colors"
@import "assets/layout"
@import "assets/bulleted"

#project-window
  display block
  position fixed
  z-index 99
  width 0
  height 100%
  top 0
  left 0
  background-color transparent

.project-window
  #project-window
    width 100%
  
  .layer
    position absolute
    height 100%
    width 100%
    top 0
    left -100%
    border-width 0
    border-style solid
    border-color #000
    box-sizing border-box
    
  #layer1
    background-color darksalmon
    z-index 1
    
  #layer2
    background-color #fff
    z-index 3
  
  .project-wrapper
    absoluteFull()
    z-index 2
  
    .project-head
      position absolute
      right 40px
      top 40px
      text-align right
      z-index 2
      
      h2
        font-family AvenirRegular
        font-size fNormal
        margin 0
        
      h3
        display inline-block
        font-family AvenirRegular
        font-weight normal
        font-size fSmall
        margin-top 5px
        margin-bottom 0

    .project-sections
      absoluteFull()
      z-index 1
        
      .project-section
        absoluteFull()
        display none
        overflow hidden
        &.active
          display block
        
        > .section-inner-wrapper
          position relative
          width calc(100% - 160px)
          max-width 800px
          height calc(100% - 240px)
          margin 0 auto
          top 120px
          box-sizing border-box
          /*@media screen and (min-width: tablet)
            top 20%
            height 70%
            width calc(100% - 240px)*/
            
    .project-nav
      position absolute
      text-align center
      z-index 2
      user-select none
      top 50%
      right 30px
      transform translateY(-50%)
      bulleted('vertical')
        
    .project-helper-nav
      a
        display inline-block
        color rgba(0,0,0,0.25);
        font-size fTiny
        text-transform uppercase
        text-decoration none
        letter-spacing 0.01em
        margin-left 5px

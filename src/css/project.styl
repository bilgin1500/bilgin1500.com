@import "assets/fonts"
@import "assets/colors"
@import "mixins/layout"

#project-window
  display block
  position fixed
  z-index 99
  width 100%
  height 100%
  top 100%
  left 0
  background-color #fff
  border 10px solid darksalmon
  box-sizing border-box
  
  .project-wrapper
    absoluteFull()
  
    .project-desc
      position absolute
      right 40px
      top 40px
      text-align right
      
      h2
        font-family AvenirHeavy
        font-size fBigger
        margin 0
        
      h3
        display inline-block
        font-family AvenirRegular
        font-weight normal
        font-size fNormal
        //line-height 1.6em
        margin-top 5px
        margin-bottom 0
        /*padding-left 2px
        padding-right 2px
        background linear-gradient(transparent 50%,yellow 50%, yellow 100%)*/
        /*@media screen and (min-width: tablet)
          font-size 23px*/

    .project-showcase
      absoluteFull()
      z-index 1
        
      .project-section
        absoluteFull()
        display none
        overflow hidden
        &.active
          display block
        
        > .section-inner-wrapper
          position relative
          top calc(165px)
          max-width 960px
          height calc(90% - 230px)
          width 90%
          margin 0 auto
          padding 20px
          box-sizing border-box
          @media screen and (min-width: tablet)
            top 20%
            height 70%
            width calc(100% - 240px)
            
    .project-nav
      absoluteFullWidth()
      bottom 10%
      height 65px
      text-align center
      z-index 2
      user-select none
      @media screen and (min-width: tablet)
        top 50%
        right 40px
        bottom auto
        left auto
        height auto
        width auto
        transform translateY(-50%)
      
      a
        display inline-block
        color #000
        text-decoration none
        font-size 13px
        font-family AvenirRegular
        transition opacity 250ms
        margin-right 20px
        @media screen and (min-width: tablet)
          display block
          margin-right 0
          margin-bottom 20px
        &:last-child
          margin-bottom 0
          margin-right 0
        &.active
        &:hover
          .hovered-svg-element
            fill yellow
        
        .hovered-svg-element
          transition fill 150ms
        
        span
        svg
          display block
          text-align center
          margin 0 auto
        
        span
          margin-top 10px
          
    .projects-adjacent-nav
      display none
      position fixed
      top 33px
      right 0
      z-index 100
      /*@media screen and (min-width: tablet)
        display block*/
      
      a
        display inline-block
        &.prev
          margin-right 50px
        
        span
          display none

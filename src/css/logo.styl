@import "assets/fonts"
json('../database/settings.json')

#logo
  position fixed
  top 40px
  left 10px
  right 10px
  height 40px
  visibility hidden
  overflow hidden
  z-index 110
  user-select none
  text-align center
  @media screen and (min-width: unit(breakpoints-tablet, 'px'))
    left 40px
    width 300px

  .text
    position relative
    display inline-block
    font-family AvenirHeavy
    font-size fHuge
    color #000
    @media screen and (min-width: unit(breakpoints-tablet, 'px'))
      position absolute
      display block
    
    .char
      visibility hidden

  .cursor
    position absolute
    left 0
    top 0
    color spotColor
    width 25px

@import "assets/layout"
@import "assets/fonts"
@import "assets/colors"

#projects
  margin 30px 0

  .project-item 
    position relative
    display block
    width 100%
    margin-bottom 20px
    z-index 2
    text-decoration none
    width 100%
    &:last-child
      margin-bottom 0
    &.dark
      color rgba(0,0,0,0.75)
    &.light
      color rgba(255,255,255,0.75)
          
    .project-visual
      
      .img-wrapper
        background-color #eee
        padding-bottom 66.66%
        
        .img
          position absolute
        
        .loader
          position absolute
          top 50%
          left 50%
          margin-left -19px
          margin-top -19px

    .project-head 
      position absolute
      top 0
      bottom 0
      padding 20px
      width 100%
      box-sizing border-box
      
      h4
        margin 0
        font-size fNormal
        margin-bottom 5px
        
      p
        margin 0
        font-size fSmall


@import "mixins/layout"
@import "assets/fonts"

#projects

  .project-items 
    flex()
    position relative
    z-index 2

    .project-item 
      display block
      width 100%
      z-index 2
      margin 2% 2% 20% 2%
      text-decoration none
      @media screen and (min-width: tablet)
        &.small 
          width 30%
        &.medium 
          width 40%
        &.large 
          width 60%
        /*&:hover
          background-color #eee*/

      .project-visual 
        box-sizing border-box
        width 100%
        min-height 100px
        box-shadow 0px 0px 10px 2px rgba(0,0,0,0.1)
        
        img
          display block
          width 100%
          height auto

      .project-desc 
        padding 20px
        color #fff
        h2
        p
          margin 0
          white-space no-break


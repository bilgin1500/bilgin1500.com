@import "mixins/flex"
@import "assets/fonts"
@import "assets/colors"

#projects
  border-top 1px solid #000

  .project-items 
    flex()
    position relative
    z-index 2

    .project-item 
      display block
      border 2px solid #000
      background-color #fff
      z-index 2
      margin 2% 2% 20% 2%
      text-decoration none
      &.small 
        width 30%
      &.medium 
        width 40%
      &.large 
        width 60%
      &:hover
        background-color #eee

      .project-visual 
        box-sizing border-box
        width 100%
        padding 20px
        min-height 100px
        background-color #000

      .project-desc 
        padding 20px
        color #000
        h2
        p
          margin 0
          word-break break-word

#project-window
  display block
  position fixed
  z-index 99
  width 100%
  height 100%
  top 100%
  left 0
  background-color #fff
  border-top 4px solid #000

  .project-wrapper
    margin 5%
    
    .project-desc
      text-align center
      margin-bottom 25px
      
      h2
        font-family museoB
        font-size 29px
        line-height 31px
        margin 0
        
      p
        font-family museo
        font-size 23px
        line-height 25px
        margin-top 10px
        margin-bottom 0
    
    .project-showcase
      position relative
      height 400px
      //background-color #eee
      
      svg
        width 100%
        height 100%
        
      > div
        display none
        position absolute
        width 100%
        height 100%
        top 0
        left 0
      .active
        display block
      .section-desktop
        background-color #000
      .section-mobile
        background-color #333
        //left 25%
      .section-gallery
        background-color #666
        //left 50%
      .section-info
        background-color #999
        //left 75%

    .project-nav
      margin 25px auto 0 auto
      text-align center
      
      a
        display inline-block
        color #000
        text-decoration none
        font-size 13px
        font-family museoSans
        margin-right 50px
        transition opacity 250ms
        &:last-child
          margin-right 0
        &.active
        &:hover
          .hovered-svg-element
            fill yellow
        
        .hovered-svg-element
          transition fill 150ms
        
        span
        svg
          display inline-block
          vertical-align middle
          
        svg
          margin-right 10px
          
    .projects-adjacent-nav
      position fixed
      top 33px
      right 85px
      
      a
        display inline-block
        &.prev
          margin-right 50px
        
        span
          display none

@import "mixins/layout"
@import "assets/fonts"
@import "assets/colors"

#projects
  
  h3
    font-size fTiny
    letter-spacing 1.5px
    text-transform uppercase
    color rgba(0,0,0,0.5)
    margin 30px 0

  .project-items 
    flex()
    position relative
    z-index 2

    .project-item 
      position relative
      display block
      width 100%
      margin-bottom 20px
      z-index 2
      text-decoration none
      width 100%
      &:last-child
        margin-bottom 0
      &.dark
        color rgba(0,0,0,0.75)
        .tags
          span
            border-color rgba(0,0,0,0.3)
      &.light
        color rgba(255,255,255,0.75)
        .tags
          span
            border-color rgba(255,255,255,0.2)
      &:hover
        .tags
          display block !important
            
      .project-visual
        
        .img-wrapper
          background-color #eee
          padding-bottom 66.66%
          
          .img
            position absolute
          
          .loader
            position absolute
            top 50%
            left 50%
            margin-left -19px
            margin-top -19px

      .project-desc 
        position absolute
        top 0
        bottom 0
        padding 20px
        width 100%
        box-sizing border-box
        
        h4
          margin 0
          font-size fNormal
          margin-bottom 5px
          
        p
          margin 0
          font-size fSmall
          
        .tags
          display none
          margin-top 10px
          span
            display inline-block
            font-size fTiny
            border-width 1px
            border-style solid
            padding 7px 10px 5px 10px
            margin-right 10px
            text-transform uppercase
            letter-spacing 0.1em
          &:last-child 
            margin-right 0

